<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fterglow1">

    <ImageView
        android:id="@+id/splash_image"
        android:layout_width="@dimen/dimen_90dp"
        android:layout_height="@dimen/dimen_90dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="30dp"
        android:gravity="center"
        android:weightSum="2"
        android:layout_marginBottom="@dimen/dimen_200sp"
        android:layout_marginRight="@dimen/dimen_30sp"
        android:layout_marginLeft="@dimen/dimen_30sp">

        <!-- 登录按钮 -->
        <Button
            android:id="@+id/btn_login"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="登录"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:backgroundTint="@color/green"
            android:padding="1dp"/>

        <!-- 注册按钮 -->
        <Button
            android:id="@+id/btn_register"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="注册"
            android:layout_marginLeft="8dp"
            android:textSize="20dp"
            android:backgroundTint="@color/blue"
            android:padding="1dp"/>

    </LinearLayout>

</RelativeLayout>